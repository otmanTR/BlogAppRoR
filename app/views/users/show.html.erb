<head>
  <link rel="stylesheet" href="<%= asset_path('application.css') %>">
</head>
<div class= "photo-user">
    <div class='user_img'>
      <img src= <%= @user.photo %>  />
    </div>
<div class="user-card">
<h1><%= @user.name  %></h1>
<p>Number of posts:  <%= @user.posts_counter %> </p> 
</div>
</div>
<div class="bio">
<h2>Bio</h2>
<p><span><%= @user.bio %></p>
</div>
<div>
<% @user.recent_three_posts.each do |post| %>
<div class="post">
  <h2>Post :<%= link_to post.title, user_post_path(@user, post) %></h2>
  <p><%= post.text %> </p>
  Comments:  <%= post.comments_counter %> <br> Likes:  <%= post.likes_counter %>
  </div>
<% end %>

</div>
<a href="<%= @user.id %>/posts">See all posts</a>